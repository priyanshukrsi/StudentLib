<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/first_screen"
    android:columnCount="2"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:rowCount="5"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="191dp"
        android:layout_height="171dp"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/iipe_logo" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:text="Student Homepage"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <Button
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:alpha="0.8"
        android:fontFamily="@font/agker"
        android:text="Profile"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/librar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:alpha="0.8"
        android:fontFamily="@font/agker"
        android:text="Library"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/curricula"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
        android:alpha="0.8"
        android:fontFamily="@font/agker"
        android:text="Curricula"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/time_table"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="1dp"
        android:alpha="0.8"
        android:fontFamily="@font/agker"
        android:text="Time Table"
        android:textColor="@color/white" />


</GridLayout>