<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/first_screen"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    android:orientation="vertical"
    tools:context=".faculty_login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:fontFamily="@font/agker"
        android:textColor="@color/black"
        android:layout_marginBottom="15dp"
        android:text="Time Table" />


    <Button
        android:id="@+id/Chem1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:enabled="true"
        android:text="1st year Chemical" />
    <Button
        android:id="@+id/Petro1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:enabled="true"
        android:text="1st year Petroleum" />
    <Button
        android:id="@+id/Chem2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:alpha="0.8"
        android:textColor="@color/white"
        android:enabled="true"
        android:text="2nd year Chemical" />
    <Button
        android:id="@+id/Petro2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:enabled="true"
        android:text="2nd year Petroleum" />
    <Button
        android:id="@+id/Chem3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:enabled="true"
        android:text="3rd year Chemical" />
    <Button
        android:id="@+id/Petro3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:enabled="true"
        android:text="3rd year Petroleum" />
    <Button
        android:id="@+id/Chem4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:enabled="true"
        android:text="4th year Chemical" />
    <Button
        android:id="@+id/Petro4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alpha="0.8"
        android:textColor="@color/white"
        android:enabled="true"
        android:text="4th year Petroleum" />


</LinearLayout>